{   
	"name": "Better Color Picker",
	"description": "Enhances the color picker",
	"developer": "anatom3000",
    "repository": "https://github.com/anatom3000/BetterColorPicker",
	"id": "anatom3000.bettercolorpicker",
	"version": "v1.0.2",
	"geode": "4.0.1",
	"gd": {
		"win": "2.2074",
		"android": "2.2074"
	},
    "dependencies": [
        {
            "id": "geode.node-ids",
            "version": ">=v1.17.0",
            "importance": "required"
        }
    ],
    "resources": {
        "sprites": [
            "resources/frame.png",
            "resources/nipple.png"
        ]
    },
    "settings": {
        "enable-picker": {
            "type": "bool",
            "name": "Enable Better Color Picker",
